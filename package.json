    "@babel/preset-env": "^7.26.9",
    "@cloudflare/workers-types": "^4.20240320.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "miniflare": "^3.20240320.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
