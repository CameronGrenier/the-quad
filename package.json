    "test:services": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/services --no-cache",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration --no-cache",
    "test:controllers": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/controllers --no-cache",
    "test:all": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests --no-cache"
