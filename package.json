{
  "name": "the-quad",
  "version": "1.0.0",
  "description": "The Quad Application",
  "main": "./client/src/worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npx wrangler deploy",
    "build": "webpack",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
